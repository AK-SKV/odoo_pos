<odoo>
	<record id="custom_product_template_tree_view" model="ir.ui.view">
        <field name="name">custom.product.template.product.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="categ_id" invisible="1"/>
                <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="product.group_uom" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>